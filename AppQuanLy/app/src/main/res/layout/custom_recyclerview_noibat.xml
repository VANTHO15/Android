<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:id="@+id/carviewNoibat"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:cardCornerRadius="15dp"
       app:cardBackgroundColor="@color/colorcam"
       android:layout_margin="5dp"
       >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anh"
            >
        </ImageView>
       <TextView
           android:id="@+id/txttieudenoibat"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:padding="10dp"
           android:text="Chu Muc 15"
           android:fontFamily="@font/dancing"
           android:textStyle="bold"
           android:textColor="@color/colorcam"
           android:textSize="15dp"
          android:gravity="center"
           >
       </TextView>
   </androidx.cardview.widget.CardView>
</LinearLayout>